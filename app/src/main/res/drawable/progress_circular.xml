<!-- res/drawable/progress_circular.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle (Gray) -->
    <item>
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Background color -->
            <corners android:radius="100dp" />
        </shape>
    </item>

    <item android:left="10dp" android:right="10dp" android:top="10dp" android:bottom="10dp">
        <shape>
            <solid android:color="#4EBA16" /> <!-- Green progress color -->
            <corners android:radius="100dp" />
        </shape>
    </item>
</layer-list>
