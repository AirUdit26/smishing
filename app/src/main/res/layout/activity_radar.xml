<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F0F2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- 🔙 Back Button -->
        <ImageButton
            android:id="@+id/radar_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:contentDescription="@string/back"
            app:srcCompat="@drawable/back_button" />

        <!-- 📡 Title -->
        <TextView
            android:id="@+id/radarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radar_back"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Live Smishing Radar"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0D47A1" />

        <!-- 🔵 Radar Lottie -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieRadar"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_below="@id/radarTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            app:lottie_fileName="radar_sweep.json"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_speed="1" />

        <!-- 🌐 Region Filter -->
        <Spinner
            android:id="@+id/region_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lottieRadar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <!-- 💡 Tip Banner -->
        <TextView
            android:id="@+id/tipBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/region_filter"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="🚫 Never click on unknown links."
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:background="#FFFBE6"
            android:textSize="15sp" />

        <!-- 📢 Radar Status -->
        <TextView
            android:id="@+id/radarStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipBanner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Scanning for threats..."
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- ⏰ Timestamp -->
        <TextView
            android:id="@+id/lastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radarStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text="Last updated: --:--"
            android:textColor="#666"
            android:textSize="13sp" />

        <!-- 📊 Bar Chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@id/lastUpdated"
            android:layout_marginTop="20dp"/>

        <!-- 🍩 Pie Chart -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@id/barChart"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>
</ScrollView>
