<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FB">

    <!-- semi-circle background -->
    <View
        android:id="@+id/SemiCircle"
        android:layout_width="414dp"
        android:layout_height="567dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/background_riskscanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- smishing logo -->
    <ImageView
        android:id="@+id/SmishingLogo"
        android:layout_width="123dp"
        android:layout_height="104dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/RiskScanner_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/new_logo" />

    <!-- back button -->
    <ImageButton
        android:id="@+id/RiskScanner_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@null"
        app:srcCompat="@drawable/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- pulsing animation view -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/pulseComposeView"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- scanning text -->

    <TextView
        android:id="@+id/scanningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanning..."
        android:textColor="#E63B3B3B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pulseComposeView" />

    <ScrollView
        android:id="@+id/habitContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="20sp"
        app:layout_constraintTop_toBottomOf="@id/pulseComposeView"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/habitSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- age-group adjustments -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- traffic light circle -->
                <View
                    android:id="@+id/light_age_group"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age-Group Adjustments"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Applying Age-based risk adjustments."
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- spam filter habit -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- traffic light circle -->
                <View
                    android:id="@+id/light_spam_filter"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Spam Filter"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking your phone for spam filter enabling."
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- SMS behaviour section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- traffic light circle -->
                <View
                    android:id="@+id/light_sms_behaviour"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SMS Behaviours"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking if your phone has received suspicious texts"
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- traffic light circle -->
                <View
                    android:id="@+id/light_phone_exposure"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Exposure"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking if your phone number has appeared in known data breaches and is searchable online."
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- MFA habits -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Traffic light circle -->
                <View
                    android:id="@+id/light_MFA"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MFA Use"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking if multi-factor authentication has been enabled on important accounts."
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- suspicious link activity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Traffic light circle -->
                <View
                    android:id="@+id/light_risky_link"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suspicious Link Activity"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking if suspicious links have been clicked on from SMS messages."
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- security update status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- traffic light circle -->
                <View
                    android:id="@+id/light_updates"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Security Update Status"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking if your phone's security updates are recent."
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- ignored security warnings -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- traffic light circle -->
                <View
                    android:id="@+id/light_warnings"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="12dp"
                    android:backgroundTint="#B0B0B0"
                    android:background="@drawable/circle_indicator" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ignored Security Warnings"
                        android:textColor="#3C3C3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking if have ignored Android security warnings previously."
                        android:textColor="#7A7A7A"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- navigation bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:itemIconSize="25dp"
        app:itemPaddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:itemBackground="@color/baby_blue"
        app:menu="@menu/activity_main_drawer" />

</androidx.constraintlayout.widget.ConstraintLayout>